a1.sources=r1
a1.channels=c1
a1.sinks=k1

a1.sources.r1.type =net.cdsunrise.hy.flume.source
a1.sources.r1.channels=c1

#Use a channel which buffers events in memory
a1.channels.c1.type = memory
a1.channels.c1.capacity=1000
a1.channels.c1.transactionCapacity = 100

#sink配置
a1.sinks.k1.channel=c1
a1.sinks.k1.type = org.apache.flume.sink.hbase.HBaseSink
a1.sinks.k1.table =  test_info
a1.sinks.k1.columnFamily = info
a1.sinks.k1.serializer= org.apache.flume.sink.hbase.SimpleHbaseEventSerializer
a1.sinks.k1.serializer.payloadColumn =  val


flume-ng agent -c /home/hadoop/flume1.5/conf -f hbase.conf -n a1 -Dflume.root.logger=INFO,console


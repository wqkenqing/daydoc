<configuration>
	<property>
		<name>hbase.tmp.dir</name>
		<value>/root/hadoop/hbase/tmp</value>
	</property>
	<property>
		<name>hbase.rootdir</name>
		<value>hdfs://ucloud1:9000/hbase</value>
	</property>
	<property>
		<name>hbase.cluster.distributed</name>
		<value>true</value>
	</property>
	<property>
		<name>hbase.zookeeper.quorum</name>
		<value>ucloud1:2181,ucloud2:2181,tengxun1:2181</value>
	</property>
	<property>
		<name>hbase.master</name>
		<value>uclou1:16000</value>
	</property>
		<property>
   		<name>hbase.rpc.timeout</name>
		<value>600000</value>
	</property>
	<!-- 设置为1 表示禁止自动拆分region分区 -->
	<property>
		<name>hbase.regionserver.regionSplitLimit</name>
		<value>1</value>
	</property>
	<!-- 配置分区条件 -->
	<property>
		<name>hbase.hregion.max.filesize</name>
		<value>107374182400</value>
	</property>
	<!-- HStore的storeFile数量 -->
	<property>
		<name>hbase.hstore.compactionThreshold</name>
		<value>5</value>
	</property>
</configuration>
